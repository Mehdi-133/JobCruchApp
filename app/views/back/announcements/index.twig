{% include 'back/assets/nav.twig' with {'current_page': 'announcements'} %}

<div class="page-container">
    <header class="page-header">
        <div class="header-content">
            <div class="header-title-group">
                <h1 class="page-title">Announcements</h1>
                <p class="page-subtitle">Manage job announcements from participating companies</p>
            </div>
            <button onclick="openModal()" class="btn-primary">
                <i class="fas fa-plus"></i>
                <span>Add Announcement</span>
            </button>
        </div>
    </header>

    {% if announcements and announcements|length > 0 %}
        <section class="announcements-grid">
            {% for announcement in announcements %}
                <article class="announcement-card">
                    <div class="card-header">
                        <div class="announcement-avatar">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <div class="card-title-group">
                            <h2 class="announcement-title">{{ announcement.title }}</h2>
                            <div class="announcement-meta">{{ announcement.company_name ?? 'Unknown Company' }}</div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="detail-item">
                            <span class="detail-icon"><i class="fas fa-file-contract"></i></span>
                            <span class="detail-content">
                                <span class="contract-badge contract-{{ announcement.contract|lower }}">
                                    {{ announcement.contract }}
                                </span>
                            </span>
                        </div>

                        {% if announcement.location %}
                            <div class="detail-item">
                                <span class="detail-icon"><i class="fas fa-map-marker-alt"></i></span>
                                <span class="detail-content">{{ announcement.location }}</span>
                            </div>
                        {% endif %}

                        <div class="detail-item">
                            <span class="detail-icon"><i class="fas fa-calendar"></i></span>
                            <span class="detail-content">Posted: {{ announcement.posted_at|date('M d, Y') }}</span>
                        </div>

                        {% if announcement.expires_at %}
                            <div class="detail-item">
                                <span class="detail-icon"><i class="fas fa-clock"></i></span>
                                <span class="detail-content">Expires: {{ announcement.expires_at|date('M d, Y') }}</span>
                            </div>
                        {% endif %}

                        {% if announcement.description %}
                            <div class="detail-item">
                                <span class="detail-icon"><i class="fas fa-info-circle"></i></span>
                                <span class="detail-content">{{ announcement.description|slice(0, 100) }}{% if announcement.description|length > 100 %}...{% endif %}</span>
                            </div>
                        {% endif %}
                    </div>

                    <div class="card-actions">
                        <button onclick="editAnnouncement({{ announcement.id }})" class="btn-secondary btn-edit">
                            <i class="fas fa-pen"></i> Edit
                        </button>
                        <button onclick="toggleStatus({{ announcement.id }}, {{ announcement.is_active }})" class="btn-secondary btn-toggle">
                            <i class="fas fa-{{ announcement.is_active ? 'archive' : 'undo' }}"></i> 
                            {{ announcement.is_active ? 'Archive' : 'Activate' }}
                        </button>
                        <button onclick="deleteAnnouncement({{ announcement.id }})" class="btn-secondary btn-delete">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                    </div>
                </article>
            {% endfor %}
        </section>
    {% else %}
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-briefcase"></i>
            </div>
            <h2>No announcements yet</h2>
            <p>Get started by adding your first job announcement to the platform.</p>
            <button onclick="openModal()" class="btn-primary">
                <i class="fas fa-plus"></i> Add Your First Announcement
            </button>
        </div>
    {% endif %}
</div>

<!-- Add Announcement Modal -->
<div id="modal-overlay" class="modal-overlay" onclick="closeModal()">
    <div class="modal-container" onclick="event.stopPropagation()">
        <div class="modal-header">
            <h2 class="modal-title">
                <i class="fas fa-briefcase"></i> Add New Announcement
            </h2>
            <button class="modal-close" onclick="closeModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form action="/admin/announcements/store" method="POST" class="modal-form">
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

            <div class="form-grid">
                <div class="form-group full-width">
                    <label><i class="fas fa-heading"></i> Job Title *</label>
                    <input type="text" name="title" required>
                </div>

                <div class="form-group">
                    <label><i class="fas fa-building"></i> Company *</label>
                    <select name="company" required>
                        <option value="">Select company</option>
                        {% for company in companies %}
                            <option value="{{ company.id }}">{{ company.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label><i class="fas fa-file-contract"></i> Contract Type *</label>
                    <select name="contract" required>
                        <option value="">Select contract type</option>
                        <option value="CDI">CDI</option>
                        <option value="CDD">CDD</option>
                        <option value="Internship">Internship</option>
                        <option value="Freelance">Freelance</option>
                    </select>
                </div>

                <div class="form-group">
                    <label><i class="fas fa-map-marker-alt"></i> Location *</label>
                    <input type="text" name="location" required>
                </div>

                {# <div class="form-group">
                    <label><i class="fas fa-calendar"></i> Expires At *</label>
                    <input type="date" name="expires_at" required>
                </div> #}

                <div class="form-group full-width">
                    <label><i class="fas fa-tools"></i> Skills Required</label>
                    <input type="text" name="skills_required" placeholder="e.g., PHP, JavaScript, MySQL">
                </div>

                <div class="form-group full-width">
                    <label><i class="fas fa-align-left"></i> Description *</label>
                    <textarea name="description" required placeholder="Describe the job position..."></textarea>
                </div>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                <button type="submit" class="btn-primary">
                    <i class="fas fa-plus"></i> Add Announcement
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Edit Announcement Modal -->
<div id="edit-modal-overlay" class="modal-overlay" onclick="closeEditModal()">
    <div class="modal-container" onclick="event.stopPropagation()">
        <div class="modal-header">
            <h2 class="modal-title">
                <i class="fas fa-pen"></i> Edit Announcement
            </h2>
            <button class="modal-close" onclick="closeEditModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form id="edit-form" method="POST" class="modal-form">
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

            <div class="form-grid">
                <div class="form-group full-width">
                    <label><i class="fas fa-heading"></i> Job Title *</label>
                    <input type="text" name="title" id="edit-title" required>
                </div>

                <div class="form-group">
                    <label><i class="fas fa-building"></i> Company *</label>
                    <select name="company" id="edit-company" required>
                        <option value="">Select company</option>
                        {% for company in companies %}
                            <option value="{{ company.id }}">{{ company.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label><i class="fas fa-file-contract"></i> Contract Type *</label>
                    <select name="contract" id="edit-contract" required>
                        <option value="">Select contract type</option>
                        <option value="CDI">CDI</option>
                        <option value="CDD">CDD</option>
                        <option value="Internship">Internship</option>
                        <option value="Freelance">Freelance</option>
                    </select>
                </div>

                <div class="form-group">
                    <label><i class="fas fa-map-marker-alt"></i> Location *</label>
                    <input type="text" name="location" id="edit-location" required>
                </div>

                <div class="form-group">
                    <label><i class="fas fa-calendar"></i> Expires At *</label>
                    <input type="date" name="expires_at" id="edit-expires-at" required>
                </div>

                <div class="form-group full-width">
                    <label><i class="fas fa-tools"></i> Skills Required</label>
                    <input type="text" name="skills_required" id="edit-skills" placeholder="e.g., PHP, JavaScript, MySQL">
                </div>

                <div class="form-group full-width">
                    <label><i class="fas fa-align-left"></i> Description *</label>
                    <textarea name="description" id="edit-description" required placeholder="Describe the job position..."></textarea>
                </div>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn-cancel" onclick="closeEditModal()">Cancel</button>
                <button type="submit" class="btn-primary">
                    <i class="fas fa-save"></i> Update Announcement
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    let announcements = {{ announcements|json_encode|raw }};

    function openModal() {
        document.getElementById('modal-overlay').style.display = 'flex';
    }

    function closeModal() {
        document.getElementById('modal-overlay').style.display = 'none';
    }

    function openEditModal() {
        document.getElementById('edit-modal-overlay').style.display = 'flex';
    }

    function closeEditModal() {
        document.getElementById('edit-modal-overlay').style.display = 'none';
    }

    function editAnnouncement(id) {
        const announcement = announcements.find(a => a.id == id);
        if (!announcement) return;

        document.getElementById('edit-form').action = `/admin/announcements/update/${id}`;
        document.getElementById('edit-title').value = announcement.title || '';
        document.getElementById('edit-company').value = announcement.company || '';
        document.getElementById('edit-contract').value = announcement.contract || '';
        document.getElementById('edit-location').value = announcement.location || '';
        document.getElementById('edit-expires-at').value = announcement.expires_at ? announcement.expires_at.split(' ')[0] : '';
        document.getElementById('edit-skills').value = announcement.skills_required || '';
        document.getElementById('edit-description').value = announcement.description || '';

        openEditModal();
    }

    function toggleStatus(id, currentStatus) {
        const action = currentStatus ? 'archive' : 'activate';
        if (confirm(`Are you sure you want to ${action} this announcement?`)) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/admin/announcements/toggle/${id}`;
            
            const csrfToken = document.createElement('input');
            csrfToken.type = 'hidden';
            csrfToken.name = 'csrf_token';
            csrfToken.value = '{{ csrf_token }}';
            
            form.appendChild(csrfToken);
            document.body.appendChild(form);
            form.submit();
        }
    }

    function deleteAnnouncement(id) {
        if (confirm('Are you sure you want to delete this announcement?')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/admin/announcements/delete/${id}`;

            const csrfToken = document.createElement('input');
            csrfToken.type = 'hidden';
            csrfToken.name = 'csrf_token';
            csrfToken.value = '{{ csrf_token }}';

            form.appendChild(csrfToken);
            document.body.appendChild(form);
            form.submit();
        }
    }

    // Keyboard shortcuts
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeModal();
            closeEditModal();
        }
    });
</script>

{% include 'back/assets/footer.twig' %}
</body>
</html>