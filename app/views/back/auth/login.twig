{% extends "Layouts/layout.twig" %}
{% block content %}
    <div class="login-container">
        <!-- Left Side - Admin Branding -->
        <div class="auth-branding admin-branding">
            <div class="branding-content">
                <div class="branding-icon">
                    <svg viewBox="0 0 24 24" fill="white">
                        <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 4L13.5 7H7V9H13.5L15 12L21 9ZM16 13C16 15.2 14.2 17 12 17S8 15.2 8 13H6C6 16.3 8.7 19 12 19S18 16.3 18 13H16Z"/>
                    </svg>
                </div>
                <h1>Admin Portal</h1>
                <p>Manage your Job Dating platform with powerful administrative tools</p>
                
                <div class="feature-list">
                    <div class="feature-item">
                        <div class="feature-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
                                <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
                            </svg>
                        </div>
                        <div class="feature-text">
                            <h3>User Management</h3>
                            <p>Control student and company accounts</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
                                <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
                            </svg>
                        </div>
                        <div class="feature-text">
                            <h3>Content Control</h3>
                            <p>Manage announcements and events</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
                                <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                            </svg>
                        </div>
                        <div class="feature-text">
                            <h3>Analytics Dashboard</h3>
                            <p>Monitor platform performance</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Admin Login Form -->
        <div class="auth-form-section">
            <div class="logo">
                <h1>Admin Access</h1>
                <p>Sign in to your administrative dashboard</p>
            </div>

            {% if error %}
                <div class="error-message">
                    {{ error }}
                </div>
            {% endif %}

            <form action="/admin/login" method="POST">
               <input type="hidden" name="csrf_token" value="{{csrf_token}}" >
               <div class="form-group">
                   <label for="email">Admin Email</label>
                   <input type="email" id="email" name="email" placeholder="admin@jobdating.com" value="{{ old.email ?? '' }}">
                   {% if errors and errors.email %}
                       <span class="error-text">{{ errors.email[0] }}</span>
                   {% endif %}
               </div>

               <div class="form-group">
                   <label for="password">Password</label>
                   <input type="password" id="password" name="password" placeholder="Enter your admin password">
                   {% if errors and errors.password %}
                       <span class="error-text">{{ errors.password[0] }}</span>
                   {% endif %}
               </div>

               <div class="forgot-password">
                   <a href="#">Forgot admin password?</a>
               </div>

               <button type="submit" class="btn btn-primary admin-btn">Access Dashboard</button>
           </form>

           <div class="admin-notice">
               <svg width="16" height="16" viewBox="0 0 24 24" fill="#f56565">
                   <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
               </svg>
               <span>Restricted access - Authorized personnel only</span>
           </div>

            <div class="back-to-site">
                <a href="/">‚Üê Back to main site</a>
            </div>
        </div>
    </div>

    <style>
        /* Admin-specific styling */
        .admin-branding {
            background: linear-gradient(135deg, #2d3748 0%, #4a5568 100%) !important;
        }

        .admin-btn {
            background: linear-gradient(135deg, #2d3748 0%, #4a5568 100%) !important;
            box-shadow: 0 4px 15px rgba(45, 55, 72, 0.4) !important;
        }

        .admin-btn:hover {
            box-shadow: 0 8px 25px rgba(45, 55, 72, 0.5) !important;
        }

        .error-message {
            background: #fed7d7;
            color: #c53030;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 0.875rem;
            border-left: 4px solid #f56565;
        }

        .error-text {
            color: #c53030;
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }

        .admin-notice {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: #fff5f5;
            color: #c53030;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            margin-top: 1.5rem;
            font-size: 0.875rem;
            border: 1px solid #fed7d7;
        }

        .back-to-site {
            text-align: center;
            margin-top: 2rem;
        }

        .back-to-site a {
            color: #718096;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            transition: color 0.3s;
        }

        .back-to-site a:hover {
            color: #2d3748;
        }

        /* Override social login for admin */
        .social-login {
            display: none;
        }

        .divider {
            display: none;
        }
    </style>
{% endblock %}