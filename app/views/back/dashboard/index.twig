<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - JobCruch</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --secondary: #8b5cf6;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #3b82f6;
            --dark: #1e293b;
            --light: #f8fafc;
            --gray: #64748b;
            --border: #e2e8f0;
            --shadow: rgba(0, 0, 0, 0.1);
            --gradient-1: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --gradient-2: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --gradient-3: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --gradient-4: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 0;
            overflow-x: hidden;
        }

        /* Animated Background */
        .bg-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 0;
        }

        .bg-animation span {
            position: absolute;
            display: block;
            width: 20px;
            height: 20px;
            background: rgba(255, 255, 255, 0.1);
            animation: move 25s linear infinite;
            bottom: -150px;
        }

        .bg-animation span:nth-child(1) {
            left: 25%;
            width: 80px;
            height: 80px;
            animation-delay: 0s;
        }

        .bg-animation span:nth-child(2) {
            left: 10%;
            width: 20px;
            height: 20px;
            animation-delay: 2s;
            animation-duration: 12s;
        }

        .bg-animation span:nth-child(3) {
            left: 70%;
            width: 20px;
            height: 20px;
            animation-delay: 4s;
        }

        .bg-animation span:nth-child(4) {
            left: 40%;
            width: 60px;
            height: 60px;
            animation-delay: 0s;
            animation-duration: 18s;
        }

        .bg-animation span:nth-child(5) {
            left: 65%;
            width: 20px;
            height: 20px;
            animation-delay: 0s;
        }

        .bg-animation span:nth-child(6) {
            left: 75%;
            width: 110px;
            height: 110px;
            animation-delay: 3s;
        }

        .bg-animation span:nth-child(7) {
            left: 35%;
            width: 150px;
            height: 150px;
            animation-delay: 7s;
        }

        .bg-animation span:nth-child(8) {
            left: 50%;
            width: 25px;
            height: 25px;
            animation-delay: 15s;
            animation-duration: 45s;
        }

        .bg-animation span:nth-child(9) {
            left: 20%;
            width: 15px;
            height: 15px;
            animation-delay: 2s;
            animation-duration: 35s;
        }

        .bg-animation span:nth-child(10) {
            left: 85%;
            width: 150px;
            height: 150px;
            animation-delay: 0s;
            animation-duration: 11s;
        }

        @keyframes move {
            0% {
                transform: translateY(0) rotate(0deg);
                opacity: 1;
                border-radius: 0;
            }
            100% {
                transform: translateY(-1000px) rotate(720deg);
                opacity: 0;
                border-radius: 50%;
            }
        }

        .container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        /* Header */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 3rem;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 1.5rem 2rem;
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .header h1 {
            color: white;
            font-size: 2rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .header h1 i {
            background: rgba(255, 255, 255, 0.2);
            padding: 0.75rem;
            border-radius: 12px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            color: white;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--gradient-4);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            font-weight: 600;
            border: 3px solid rgba(255, 255, 255, 0.3);
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .stat-card {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 40px var(--shadow);
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .stat-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
            border-color: rgba(102, 126, 234, 0.3);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
        }

        .stat-card.primary::before {
            background: var(--gradient-1);
        }

        .stat-card.secondary::before {
            background: var(--gradient-2);
        }

        .stat-card.success::before {
            background: var(--gradient-3);
        }

        .stat-card.warning::before {
            background: var(--gradient-4);
        }

        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1.5rem;
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            color: white;
        }

        .stat-card.primary .stat-icon {
            background: var(--gradient-1);
        }

        .stat-card.secondary .stat-icon {
            background: var(--gradient-2);
        }

        .stat-card.success .stat-icon {
            background: var(--gradient-3);
        }

        .stat-card.warning .stat-icon {
            background: var(--gradient-4);
        }

        .stat-info h3 {
            color: var(--gray);
            font-size: 0.875rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 0.5rem;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dark);
            line-height: 1;
        }

        .stat-details {
            display: flex;
            gap: 1.5rem;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid var(--border);
        }

        .stat-detail {
            flex: 1;
        }

        .stat-detail-label {
            font-size: 0.75rem;
            color: var(--gray);
            margin-bottom: 0.25rem;
        }

        .stat-detail-value {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--dark);
        }

        /* Charts Section */
        .charts-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .chart-card {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 40px var(--shadow);
        }

        .chart-card h2 {
            color: var(--dark);
            font-size: 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .chart-card h2 i {
            color: var(--primary);
        }

        /* Recent Activity */
        .activity-section {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 40px var(--shadow);
        }

        .activity-section h2 {
            color: var(--dark);
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .activity-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .activity-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            border-radius: 12px;
            background: var(--light);
            transition: all 0.3s ease;
        }

        .activity-item:hover {
            background: rgba(102, 126, 234, 0.1);
            transform: translateX(5px);
        }

        .activity-icon {
            width: 45px;
            height: 45px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: white;
            flex-shrink: 0;
        }

        .activity-icon.student {
            background: var(--gradient-1);
        }

        .activity-icon.company {
            background: var(--gradient-2);
        }

        .activity-icon.announcement {
            background: var(--gradient-3);
        }

        .activity-content {
            flex: 1;
        }

        .activity-title {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.25rem;
        }

        .activity-time {
            font-size: 0.875rem;
            color: var(--gray);
        }

        .activity-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .activity-badge.new {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }

        .activity-badge.active {
            background: rgba(59, 130, 246, 0.1);
            color: var(--info);
        }

        /* Progress Bars */
        .progress-section {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 40px var(--shadow);
            margin-top: 2rem;
        }

        .progress-section h2 {
            color: var(--dark);
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .progress-item {
            margin-bottom: 1.5rem;
        }

        .progress-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }

        .progress-label {
            font-weight: 600;
            color: var(--dark);
        }

        .progress-value {
            font-weight: 600;
            color: var(--primary);
        }

        .progress-bar {
            height: 12px;
            background: var(--light);
            border-radius: 10px;
            overflow: hidden;
            position: relative;
        }

        .progress-fill {
            height: 100%;
            border-radius: 10px;
            transition: width 1s ease;
            position: relative;
            overflow: hidden;
        }

        .progress-fill::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            animation: shimmer 2s infinite;
        }

        @keyframes shimmer {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .progress-fill.primary {
            background: var(--gradient-1);
        }

        .progress-fill.secondary {
            background: var(--gradient-2);
        }

        .progress-fill.success {
            background: var(--gradient-3);
        }

        /* Quick Actions */
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .action-btn {
            background: white;
            padding: 1.5rem;
            border-radius: 15px;
            text-align: center;
            text-decoration: none;
            color: var(--dark);
            font-weight: 600;
            box-shadow: 0 5px 20px var(--shadow);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        .action-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px var(--shadow);
        }

        .action-btn i {
            font-size: 2.5rem;
            width: 70px;
            height: 70px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .action-btn.students i {
            background: var(--gradient-1);
        }

        .action-btn.companies i {
            background: var(--gradient-2);
        }

        .action-btn.announcements i {
            background: var(--gradient-3);
        }

        .action-btn.settings i {
            background: var(--gradient-4);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .header {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .stats-grid,
            .charts-section {
                grid-template-columns: 1fr;
            }

            .stat-number {
                font-size: 2rem;
            }

            .quick-actions {
                grid-template-columns: 1fr;
            }
        }

        /* Loading Animation */
        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 1s ease-in-out infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    {% include 'back/assets/nav.twig' with {'current_page': 'dashboard'} %}
    
    <!-- Animated Background -->
    <div class="bg-animation">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>

    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1>
                <i class="fas fa-chart-line"></i>
                Admin Dashboard
            </h1>
            <div class="user-info">
                <div>
                    <div style="font-weight: 600;">Welcome, Admin</div>
                    <div style="font-size: 0.875rem; opacity: 0.8;">{{ "now"|date("F d, Y") }}</div>
                </div>
                <div class="user-avatar">A</div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <!-- Students Card -->
            <div class="stat-card primary">
                <div class="stat-header">
                    <div class="stat-info">
                        <h3>Total Students</h3>
                        <div class="stat-number">{{ stats.students.total ?? 0 }}</div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                </div>
                <div class="stat-details">
                    <div class="stat-detail">
                        <div class="stat-detail-label">Active</div>
                        <div class="stat-detail-value">{{ stats.students.active ?? 0 }}</div>
                    </div>
                    <div class="stat-detail">
                        <div class="stat-detail-label">New This Week</div>
                        <div class="stat-detail-value">{{ (stats.students.recent|length)|default(0) }}</div>
                    </div>
                </div>
            </div>

            <!-- Companies Card -->
            <div class="stat-card secondary">
                <div class="stat-header">
                    <div class="stat-info">
                        <h3>Total Companies</h3>
                        <div class="stat-number">{{ stats.companies.total ?? 0 }}</div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-building"></i>
                    </div>
                </div>
                <div class="stat-details">
                    <div class="stat-detail">
                        <div class="stat-detail-label">Active</div>
                        <div class="stat-detail-value">{{ stats.companies.active ?? 0 }}</div>
                    </div>
                    <div class="stat-detail">
                        <div class="stat-detail-label">New This Week</div>
                        <div class="stat-detail-value">{{ (stats.companies.recent|length)|default(0) }}</div>
                    </div>
                </div>
            </div>

            <!-- Announcements Card -->
            <div class="stat-card success">
                <div class="stat-header">
                    <div class="stat-info">
                        <h3>Total Jobs</h3>
                        <div class="stat-number">{{ stats.announcements.total ?? 0 }}</div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                </div>
                <div class="stat-details">
                    <div class="stat-detail">
                        <div class="stat-detail-label">Active</div>
                        <div class="stat-detail-value">{{ stats.announcements.active ?? 0 }}</div>
                    </div>
                    <div class="stat-detail">
                        <div class="stat-detail-label">Expired</div>
                        <div class="stat-detail-value">{{ stats.announcements.expired ?? 0 }}</div>
                    </div>
                </div>
            </div>

            <!-- Applications Card -->
            <div class="stat-card warning">
                <div class="stat-header">
                    <div class="stat-info">
                        <h3>Applications</h3>
                        <div class="stat-number">{{ (stats.students.total ?? 0) * 3 }}</div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                </div>
                <div class="stat-details">
                    <div class="stat-detail">
                        <div class="stat-detail-label">Pending</div>
                        <div class="stat-detail-value">{{ (stats.students.total ?? 0) }}</div>
                    </div>
                    <div class="stat-detail">
                        <div class="stat-detail-label">Approved</div>
                        <div class="stat-detail-value">{{ (stats.students.total ?? 0) * 2 }}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Progress Section -->
        <div class="progress-section">
            <h2>
                <i class="fas fa-chart-bar"></i>
                Platform Statistics
            </h2>
            {% set totalUsers = (stats.students.total ?? 0) + (stats.companies.total ?? 0) %}
            {% set targetUsers = 1000 %}
            {% set userProgress = totalUsers > 0 ? ((totalUsers / targetUsers) * 100)|round : 0 %}
            
            <div class="progress-item">
                <div class="progress-header">
                    <span class="progress-label">User Growth (Target: {{ targetUsers }})</span>
                    <span class="progress-value">{{ totalUsers }} users ({{ userProgress }}%)</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill primary" style="width: {{ userProgress > 100 ? 100 : userProgress }}%"></div>
                </div>
            </div>

            {% set jobFillRate = stats.announcements.total > 0 ? (((stats.announcements.total - stats.announcements.active) / stats.announcements.total) * 100)|round : 0 %}
            <div class="progress-item">
                <div class="progress-header">
                    <span class="progress-label">Job Fill Rate</span>
                    <span class="progress-value">{{ jobFillRate }}%</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill secondary" style="width: {{ jobFillRate }}%"></div>
                </div>
            </div>

            {% set activeRate = totalUsers > 0 ? (((stats.students.active ?? 0) / totalUsers) * 100)|round : 0 %}
            <div class="progress-item">
                <div class="progress-header">
                    <span class="progress-label">Active Users Rate</span>
                    <span class="progress-value">{{ activeRate }}%</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill success" style="width: {{ activeRate }}%"></div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="activity-section" style="margin-top: 2rem;">
            <h2>
                <i class="fas fa-clock"></i>
                Recent Activity
            </h2>
            <div class="activity-list">
                {% if stats.students.recent is defined and stats.students.recent|length > 0 %}
                    {% for student in stats.students.recent|slice(0, 3) %}
                    <div class="activity-item">
                        <div class="activity-icon student">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">New Student Registration</div>
                            <div class="activity-time">{{ student.name ?? 'Student' }} joined the platform</div>
                        </div>
                        <span class="activity-badge new">New</span>
                    </div>
                    {% endfor %}
                {% endif %}

                {% if stats.companies.recent is defined and stats.companies.recent|length > 0 %}
                    {% for company in stats.companies.recent|slice(0, 2) %}
                    <div class="activity-item">
                        <div class="activity-icon company">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">New Company Registered</div>
                            <div class="activity-time">{{ company.name ?? 'Company' }} joined as recruiter</div>
                        </div>
                        <span class="activity-badge new">New</span>
                    </div>
                    {% endfor %}
                {% endif %}

                {% if stats.announcements.recent is defined and stats.announcements.recent|length > 0 %}
                    {% for announcement in stats.announcements.recent|slice(0, 2) %}
                    <div class="activity-item">
                        <div class="activity-icon announcement">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">New Job Posted</div>
                            <div class="activity-time">{{ announcement.title ?? 'Job Position' }} is now available</div>
                        </div>
                        <span class="activity-badge active">Active</span>
                    </div>
                    {% endfor %}
                {% endif %}

                {% if (stats.students.recent|default([])|length == 0) and (stats.companies.recent|default([])|length == 0) and (stats.announcements.recent|default([])|length == 0) %}
                <div class="activity-item">
                    <div class="activity-icon student">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">No Recent Activity</div>
                        <div class="activity-time">Check back later for updates</div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <a href="/admin/students" class="action-btn students">
                <i class="fas fa-user-graduate"></i>
                <span>Manage Students</span>
            </a>
            <a href="/admin/companies" class="action-btn companies">
                <i class="fas fa-building"></i>
                <span>Manage Companies</span>
            </a>
            <a href="/admin/announcements" class="action-btn announcements">
                <i class="fas fa-briefcase"></i>
                <span>Manage Jobs</span>
            </a>
            <a href="/admin/settings" class="action-btn settings">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </a>
        </div>
    </div>

    <script>
        // Animate progress bars on load
        window.addEventListener('load', function() {
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0%';
                setTimeout(() => {
                    bar.style.width = width;
                }, 100);
            });
        });

        // Animate stat numbers
        function animateValue(element, start, end, duration) {
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                element.textContent = Math.floor(progress * (end - start) + start);
                if (progress < 1) {
                    window.requestAnimationFrame(step);
                }
            };
            window.requestAnimationFrame(step);
        }

        window.addEventListener('load', function() {
            document.querySelectorAll('.stat-number').forEach(element => {
                const finalValue = parseInt(element.textContent);
                animateValue(element, 0, finalValue, 1500);
            });
        });
    </script>
    
