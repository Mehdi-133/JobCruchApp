
{% extends "Layouts/layout.twig" %}
{% block content %}
    <div class="login-container">
        <!-- Left Side - Branding -->
        <div class="auth-branding">
            <div class="branding-content">
                <div class="branding-icon">
                    <svg viewBox="0 0 24 24" fill="white">
                        <path d="M20 6h-4V4c0-1.11-.89-2-2-2h-4c-1.11 0-2 .89-2 2v2H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-6 0h-4V4h4v2z"/>
                    </svg>
                </div>
                <h1>Start Your Journey</h1>
                <p>Join thousands of professionals finding their dream careers</p>
                
                <div class="feature-list">
                    <div class="feature-item">
                        <div class="feature-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                            </svg>
                        </div>
                        <div class="feature-text">
                            <h3>Free Forever</h3>
                            <p>No hidden fees or charges</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
                                <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
                            </svg>
                        </div>
                        <div class="feature-text">
                            <h3>Secure & Private</h3>
                            <p>Your data is always protected</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                            </svg>
                        </div>
                        <div class="feature-text">
                            <h3>Expert Support</h3>
                            <p>24/7 customer assistance</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="auth-form-section">
            <div class="logo">
                <h1>Create Account</h1>
                <p>Start your career journey today</p>
            </div>

            <form action="/register" method="POST">
               <input type="hidden" name="csrf_token" value="{{csrf_token}}" >
               
               <div class="form-group">
                   <label for="name">Full Name</label>
                   <input type="text" id="name" name="name" placeholder="John Doe" value="{{ old.name ?? '' }}" required>
                   {% if errors and errors.name %}
                       <span style="color: #c53030; font-size: 12px; margin-top: 4px; display: block;">{{ errors.name[0] }}</span>
                   {% endif %}
               </div>

               <div class="form-group">
                   <label for="email">Email Address</label>
                   <input type="email" id="email" name="email" placeholder="you@example.com" value="{{ old.email ?? '' }}" required>
                   {% if errors and errors.email %}
                       <span style="color: #c53030; font-size: 12px; margin-top: 4px; display: block;">{{ errors.email[0] }}</span>
                   {% endif %}
               </div>

               <div class="form-group">
                   <label for="password">Password</label>
                   <input type="password" id="password" name="password" placeholder="At least 8 characters" required>
                   {% if errors and errors.password %}
                       <span style="color: #c53030; font-size: 12px; margin-top: 4px; display: block;">{{ errors.password[0] }}</span>
                   {% endif %}
               </div>

               <div class ="form-group">
                   <label for="password_confirmation">Confirm Password</label>
                   <input type="password" id="password_confirmation" name="password_confirmation" placeholder="Re-enter your password" required>
                   {% if errors and errors.password_confirmation %}
                       <span style="color: #c53030; font-size: 12px; margin-top: 4px; display: block;">{{ errors.password_confirmation[0] }}</span>
                   {% endif %}
                </div>

               <button type="submit" class="btn btn-primary">Create Account</button>
           </form>

           <div class="divider">
               <span>or continue with</span>
           </div>

           <div class="social-login">
               <button class="btn-social" onclick="location.href='#'">
                   <svg width="18" height="18" viewBox="0 0 18 18">
                       <path fill="#4285F4" d="M17.64 9.2c0-.637-.057-1.251-.164-1.84H9v3.481h4.844c-.209 1.125-.843 2.078-1.796 2.717v2.258h2.908c1.702-1.567 2.684-3.874 2.684-6.615z"/>
                       <path fill="#34A853" d="M9 18c2.43 0 4.467-.806 5.956-2.184l-2.908-2.258c-.806.54-1.837.86-3.048.86-2.344 0-4.328-1.584-5.036-3.711H.957v2.332C2.438 15.983 5.482 18 9 18z"/>
                       <path fill="#FBBC05" d="M3.964 10.707c-.18-.54-.282-1.117-.282-1.707 0-.593.102-1.17.282-1.709V4.958H.957C.347 6.173 0 7.548 0 9c0 1.452.348 2.827.957 4.042l3.007-2.335z"/>
                       <path fill="#EA4335" d="M9 3.58c1.321 0 2.508.454 3.44 1.345l2.582-2.58C13.463.891 11.426 0 9 0 5.482 0 2.438 2.017.957 4.958L3.964 7.29C4.672 5.163 6.656 3.58 9 3.58z"/>
                   </svg>
                   Google
               </button>
               <button class="btn-social" onclick="location.href='#'">
                   <svg width="18" height="18" viewBox="0 0 24 24" fill="#0077B5">
                       <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                   </svg>
                   LinkedIn
               </button>
           </div>

            <div class="register-link">
                Already have an account? <a href="/login">Sign in</a>
            </div>
        </div>
    </div>
{% endblock %}