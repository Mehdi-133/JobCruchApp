{% extends "Layouts/layout.twig" %}
{% block content %}
<div class="applications-container">
    <!-- Header Section -->
    <header class="applications-header">
        <div class="header-content">
            <div class="welcome-section">
                <h1>My Applications</h1>
                <p>Track all your job applications and their status</p>
            </div>
            <div class="user-profile">
                {% if user.profile_image %}
                    <img src="/{{ user.profile_image }}" alt="Profile">
                {% else %}
                    <div class="profile-placeholder">{{ user.name|slice(0,1)|upper }}</div>
                {% endif %}
            </div>
        </div>
    </header>

    <!-- Applications List -->
    <div class="applications-list">
        {% if applications %}
            {% for application in applications %}
                <div class="application-card application-{{ application.status|lower }}">
                    <div class="application-header">
                        <div class="application-info">
                            <h2 class="job-title">{{ application.job_title }}</h2>
                            <p class="company-name">{{ application.company_name }}</p>
                            <span class="location">
                                <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                </svg>
                                {{ application.location }}
                            </span>
                        </div>
                        <div class="application-status">
                            <span class="status-badge status-{{ application.status|lower }}">
                                {{ application.status|capitalize }}
                            </span>
                        </div>
                    </div>

                    <div class="application-body">
                        <div class="application-details">
                            <div class="detail-item">
                                <span class="detail-label">Contract Type:</span>
                                <span class="detail-value">{{ application.contract_type }}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Applied On:</span>
                                <span class="detail-value">{{ application.applied_at|date('M d, Y') }}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Company Email:</span>
                                <span class="detail-value">
                                    <a href="mailto:{{ application.company_email }}">{{ application.company_email }}</a>
                                </span>
                            </div>
                        </div>

                        {% if application.cover_letter %}
                            <div class="cover-letter-section">
                                <h3>Cover Letter</h3>
                                <p>{{ application.cover_letter }}</p>
                            </div>
                        {% endif %}

                        {% if application.cv_path %}
                            <div class="cv-section">
                                <a href="/{{ application.cv_path }}" target="_blank" class="download-link">
                                    <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                    </svg>
                                    Download CV
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="no-applications">
                <svg width="64" height="64" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <h3>No Applications Yet</h3>
                <p>You haven't applied to any jobs yet. <a href="/jobs">Browse job offers</a></p>
            </div>
        {% endif %}
    </div>
</div>

<style>
.applications-container {
    min-height: calc(100vh - 64px);
    background: #f9fafb;
    padding: 2rem;
}

.applications-header {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.welcome-section h1 {
    font-size: 2rem;
    color: #2d3748;
    margin-bottom: 0.5rem;
}

.welcome-section p {
    color: #718096;
    font-size: 1.1rem;
}

.user-profile img,
.profile-placeholder {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
}

.profile-placeholder {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: bold;
}

.applications-list {
    display: grid;
    gap: 2rem;
}

.application-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.07);
    border-left: 5px solid #cbd5e0;
    transition: all 0.3s ease;
}

.application-card:hover {
    box-shadow: 0 12px 24px rgba(0,0,0,0.1);
    transform: translateY(-2px);
}

.application-pending {
    border-left-color: #ecc94b;
}

.application-reviewed {
    border-left-color: #4299e1;
}

.application-accepted {
    border-left-color: #48bb78;
}

.application-rejected {
    border-left-color: #f56565;
}

.application-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e2e8f0;
}

.application-info {
    flex: 1;
}

.job-title {
    font-size: 1.5rem;
    color: #2d3748;
    margin-bottom: 0.5rem;
}

.company-name {
    color: #718096;
    font-size: 1rem;
    margin-bottom: 0.5rem;
}

.location {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: #718096;
    font-size: 0.875rem;
}

.application-status {
    text-align: right;
}

.status-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
}

.status-pending {
    background: #fef3c7;
    color: #92400e;
}

.status-reviewed {
    background: #dbeafe;
    color: #1e3a8a;
}

.status-accepted {
    background: #dcfce7;
    color: #166534;
}

.status-rejected {
    background: #fee2e2;
    color: #7f1d1d;
}

.application-body {
    padding: 1rem 0;
}

.application-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.detail-item {
    display: flex;
    flex-direction: column;
}

.detail-label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.25rem;
    font-size: 0.875rem;
}

.detail-value {
    color: #718096;
}

.detail-value a {
    color: #3b82f6;
    text-decoration: none;
    transition: color 0.2s;
}

.detail-value a:hover {
    color: #2563eb;
}

.cover-letter-section {
    background: #f7fafc;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    margin-bottom: 1rem;
}

.cover-letter-section h3 {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
}

.cover-letter-section p {
    color: #4a5568;
    line-height: 1.6;
    white-space: pre-wrap;
}

.cv-section {
    margin-top: 1rem;
}

.download-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s;
}

.download-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.no-applications {
    text-align: center;
    padding: 4rem 2rem;
    background: white;
    border-radius: 16px;
}

.no-applications svg {
    color: #cbd5e0;
    margin-bottom: 1rem;
}

.no-applications h3 {
    font-size: 1.5rem;
    color: #2d3748;
    margin-bottom: 0.5rem;
}

.no-applications p {
    color: #718096;
}

.no-applications a {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
}

.no-applications a:hover {
    text-decoration: underline;
}

@media (max-width: 768px) {
    .applications-container {
        padding: 1rem;
    }

    .header-content {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }

    .application-header {
        flex-direction: column;
        gap: 1rem;
    }

    .application-status {
        text-align: left;
    }

    .application-details {
        grid-template-columns: 1fr;
    }
}
</style>
{% endblock %}
