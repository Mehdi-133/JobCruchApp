{% extends 'layouts/layout.twig' %}

{% block title %}{{ job.title }} - Job Details{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <a href="/jobs" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">
            &larr; Back to Jobs
        </a>
        
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="p-6">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ job.title }}</h1>
                
                <div class="flex flex-wrap gap-4 mb-6">
                    <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        <span>{{ job.company_name|default('Company') }}</span>
                    </div>
                    
                    <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span>{{ job.location|default('Location not specified') }}</span>
                    </div>
                    
                    <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">{{ job.contract|default('Contract') }}</span>
                    </div>
                </div>
                
                <div class="border-t border-gray-200 pt-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-3">Job Description</h2>
                    <div class="text-gray-700 leading-relaxed whitespace-pre-line">
                        {{ job.description|default('No description available') }}
                    </div>
                </div>
                
                {% if job.skills_required %}
                <div class="border-t border-gray-200 pt-6 mt-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-3">Required Skills</h2>
                    <div class="text-gray-700">
                        {{ job.skills_required }}
                    </div>
                </div>
                {% endif %}
                
                <div class="border-t border-gray-200 pt-6 mt-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-3">Application Details</h2>
                    <div class="space-y-2 text-gray-700">
                        <p><strong>Posted:</strong> {{ job.posted_at|date('F d, Y') }}</p>
                        <p><strong>Expires:</strong> {{ job.expires_at|date('F d, Y') }}</p>
                        {% if job.company_email %}
                        <p><strong>Contact Email:</strong> <a href="mailto:{{ job.company_email }}" class="text-blue-600 hover:text-blue-800">{{ job.company_email }}</a></p>
                        {% endif %}
                        {% if job.company_phone %}
                        <p><strong>Contact Phone:</strong> {{ job.company_phone }}</p>
                        {% endif %}
                    </div>
                </div>
                
                <div class="mt-8">
                    <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg w-full sm:w-auto">
                        Apply Now
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
